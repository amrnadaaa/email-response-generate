{
  "name": "Email Writer Assistant",
  "description": "AI-powered email reply generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "*://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Email Writer Assistant"
  }
}